@model IEnumerable<Shop_Auto.Data.Models.Car>

<div class="container mt-4">
    @if (Model.Count() == 0)
    {
    <div class="preview container mt-4">
        <h2><strong>No cars were found based on your search.</strong></h2>
        </div>
        }
        else
        {
        <h1>Cars available based on your search:</h1>
        <div class="row mt-3 mb-2">

            @{ foreach (Car car in Model)
                {
                    @await Html.PartialAsync("AllCars", car) } }
        </div>
        }
    </div>